{% extends 'base.html.twig' %}
{% block head %}
    <header class="rt-site-header  rt-fixed-top white-menu">
        <div class="top-header d-none d-md-block">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <ul class="text-center text-md-left top-message">
                            <li> <i class="icofont-headphone-alt"></i>Infoline</li>
                            <li><a href="mailto:info@emigrar.com "><i class="icofont-email"></i>info@emigrar.com</a></li>
                        </ul>
                    </div><!-- end top header single -->
                    <div class="col-md-6">
                        <ul class="text-center text-md-right top-social">

                            <li><a href=" {{ path('AfficheEvenements') }}"><i class="fas fa-home"></i>{% trans %}Hote Mode{% endtrans %}</a></li>
                            <li><a href="#" data-target="#rtmodal-1" data-toggle="modal"><i class="far fa-user-circle"></i>{% trans %}Subscribe | Sign in {% endtrans %}</a></li>
                        </ul>
                    </div><!-- end top header single -->
                </div>
            </div>
        </div> <!-- end top header -->



        <div class="main-header rt-sticky">
            <nav class="navbar">
                <div class="container">


                    <div class="ml-auto d-flex align-items-center">


                        <div class="main-menu">

                            <ul>
                                <li class="current-menu-item"><a href=" {{ path('home') }}">{% trans %}Home{% endtrans %}</a></li>


                                <li class="menu-item-has-children"><a href="#">Services</a>
                                    <ul class="sub-menu">
                                        <li><a href="#">{% trans %}Rbnb{% endtrans %}</a></li>
                                        <li><a href=" {{ path('AfficheEvenementsPublic') }}">{% trans %}Events{% endtrans %}</a></li>
                                        <li><a href="#">{% trans %}Competitions{% endtrans %}</a></li>
                                        <li><a href="#">Restaurants </a></li>
                                        <li><a href="#">{% trans %}Rent{% endtrans %}</a></li>
                                        <li><a href="#">Shopping</a></li>


                                    </ul>
                                    <div class="mobile-menu">
                                        <div class="menu-click">
                                            <span></span>
                                            <span></span>
                                            <span></span>
                                        </div>
                                    </div>
                        </div><!-- end main menu -->
                        <div class="rt-nav-tolls d-flex align-items-center">
    <span class="d-md-inline d-none"><a href="contact.html" class="rt-btn rt-gradient2 rt-rounded text-uppercase rt-Bshadow-1">{% trans %} Contact us{% endtrans %}
            </a></span>
                        </div>

                    </div>
                </div>
            </nav>
        </div><!-- /.bootom-header -->


    </header>
{% endblock %}
{% block body %}

    <div class="rt-breadcump rt-breadcump-height">
        <div class="rt-page-bg rtbgprefix-cover" style="background-image: url({{ asset('assets/images/backgrounds/bredcump.png') }})">
        </div><!-- /.rt-page-bg -->
        <div class="container">
            <div class="row rt-breadcump-height">
                <div class="col-12">
                    <div class="breadcrumbs-content">
                        <h3>{% trans %}Events{% endtrans %}</h3>
                        <div class="breadcrumbs">
                            <span class="divider"><i class="icofont-home"></i></span>
                            <a href="#" title="Home">{% trans %}Home{% endtrans %}</a>
                            <span class="divider"><i class="icofont-simple-right"></i></span>
                            <a href="#">{% trans %}Events{% endtrans %}</a>
                            <span class="divider"><i class="icofont-simple-right"></i></span>
                            {% trans %}Update an event{% endtrans %}

                        </div><!-- /.breadcrumbs -->
                    </div><!-- /.breadcrumbs-content -->
                </div><!-- /.col-12 -->
            </div><!-- /.row -->
        </div><!-- /.container -->
    </div><!-- /.rt-bredcump -->




    <section class="content-area">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h4 class="rt-strong text-uppercase rt-mb-20">{% trans %}Update an event{% endtrans %} </h4>
                </div><!-- /.col-12 -->
                <div class="col-xl-9">
                    <div class="alert rt-alrt-1">
                        <div class="media">

                            <div class="media-body">
                                <h6 class="mt-0 rt-semiblod">{% trans %}Welcome!{% endtrans %} </h6>
                                {% trans %} Create an event on our platform and get in touch with a big number of tourists and locals!{% endtrans %}
                                <!-- Créer votre événement sur notre platforme pour toucher le plus grand nombre de tunisiens et de touristes!
                           -->  </div>
                        </div>
                    </div>
                    <br>
                    <br>
                    <div class="flight-list-box rt-mb-30 pt-30">
                        <h4 class="f-size-24 text-capitalize rt-mb-30  rt-semiblod">{% trans %}Enter details{% endtrans %}</h4>
                        {% for locale in locales  %}
                            {% if locale != app.request.locale %}
                                <a href="{{ path('change-locale',{'locale': locale}) }}"><img src="{{ asset('picture/'~locale~'.png') }}" alt="{{ locale }}"></a>
                            {% endif %}
                        {% endfor %}

                        {{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
                        <div class="form">
                            <label>{% trans %}ID of the organizer{% endtrans %}</label>
                            {{ form_widget(form.idOrganisateur,{'attr':{'class':'form-control'}}) }}

                        </div>

                        <div class="form">
                            <label>{% trans %}Title{% endtrans %}</label>
                            {{ form_widget(form.titre,{'attr':{'class':'form-control'}}) }}

                        </div>

                        <div class="form">
                            <label>{% trans %}Start date{% endtrans %}</label>
                            {{ form_widget(form.dateDebut,{'attr':{'class':'form-control'}}) }}

                        </div>

                        <div class="form">
                            <label>{% trans %}End date{% endtrans %}</label>
                            {{ form_widget(form.dateFin,{'attr':{'class':'form-control'}}) }}

                        </div>

                        <div class="form">
                            <label>{% trans %}Hour{% endtrans %}</label>
                            {{ form_widget(form.heure,{'attr':{'class':'form-control'}}) }}

                        </div>

                        <div class="form">
                            <label>{% trans %}City{% endtrans %}</label>
                            {{ form_widget(form.ville,{'attr':{'class':'form-control'}}) }}

                        </div>

                        <div class="form">
                            <label>{% trans %}Address{% endtrans %}</label>
                            {{ form_widget(form.adresse,{'attr':{'class':'form-control'}}) }}

                        </div>

                        <div class="form">
                            <label>{% trans %}Description{% endtrans %}</label>
                            {{ form_widget(form.description,{'attr':{'class':'form-control'}}) }}

                        </div>

                        <div class="form">
                            <label>{% trans %}Photo{% endtrans %}</label>
                            {{ form_widget(form.photo,{'attr':{'class':'form-control'}}) }}

                        </div>

                        <div class="form">
                            <label>{% trans %}Approved{% endtrans %}</label>
                            {{ form_widget(form.approuver,{'attr':{'class':'form-control'}}) }}

                        </div>

                        <div class="form">
                            <label>{% trans %}Number of views{% endtrans %}</label>
                            {{ form_widget(form.nombreVus,{'attr':{'class':'form-control'}}) }}

                        </div>

                        <div class="form">
                            <label>{% trans %}Number of participants{% endtrans %}</label>
                            {{ form_widget(form.nombreParticipants,{'attr':{'class':'form-control'}}) }}
                        </div>
                        <div class="form">
                            <label>{% trans %}Maximal number of participants{% endtrans %}</label>
                            {{ form_widget(form.nombreMax,{'attr':{'class':'form-control'}}) }}

                        </div>
                        <br>


                        {{ form_widget(form) }}
                        <button class="btn btn-primary btn-block">{% trans %}Add{% endtrans %}</button>
                        {{ form_end(form) }}
                    </div><!-- /.flight-list-box -->


                </div><!-- /.row -->
            </div><!-- /.container -->
        </div></section>

{% endblock %}













